{
  "$schema": "https://v2-8-9.turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "types/**"],
      "outputLogs": "new-only"
    },
    "build:publish": {
      "dependsOn": ["^build:publish"],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "publish-test": {
      "dependsOn": ["^build:publish"],
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  }
}
